/**
 * 
 */
package watermarker;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.*;

/**
 * @author Michael Yuhas
 *
 */
public class Watermarker {

    /**
     * @param args
     */
    public static void main(String[] args) {
        if (System.getProperty("os.name").contentEquals("Mac OS X")) {
            System.setProperty("apple.laf.useScreenMenuBar", "true");
        }
        
        
        JFrame mainFrame = new JFrame("Bulk Watermark Generator");

        JTextField imagesToBeWatermarked = new JTextField(50);
        JTextField watermark = new JTextField(50);
        
        
        mainFrame.add(imagesToBeWatermarked, BorderLayout.LINE_START);
        mainFrame.add(watermark, BorderLayout.LINE_START);
        mainFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        mainFrame.setVisible(true);

    }

}
